name: verify-k0

on:
  pull_request:
    branches: [ "main" ]
  push:
    branches: [ "main" ]
  workflow_dispatch:

jobs:
  verify-k0:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0
      - uses: actions/setup-python@v5
        with:
          python-version: "3.11"
      - name: Print PS env
        shell: pwsh
        run: |
          $PSVersionTable
          pwsh -v
      - name: Run K0 verification
        shell: pwsh
        run: |
          Set-StrictMode -Version Latest
          $ErrorActionPreference = 'Stop'
          pwsh -NoLogo -NoProfile -File ./verify_all.ps1
